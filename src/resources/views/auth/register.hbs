<div class="container">
    <div class="row">
        <div class="col-12 col-lg-12 col-xl-12">
            <div id="secure-login">
                <form method="POST" id="secure-login-main">
                    <h1>Đăng ký</h1>
                    {{#if messageSuccess}}
                    <div class="alert alert-success">
                        <strong>Success!</strong> {{messageSuccess}}
                    </div>
                    {{/if}}
                    {{#if message}}
                    <div class="alert alert-danger">
                        <strong>Error!</strong> {{message}}
                    </div>
                    {{/if}}
                    <div class="form-group">
                        <label for="fullname" style="font-weight: 500;">Họ và tên</label>
                        <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Họ và tên">
                    </div>
                    <div class="form-group">
                        <label for="username" style="font-weight: 500;">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập">
                    </div>
                    <div class="form-group">
                        <label for="email" style="font-weight: 500;">Email</label>
                        <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="password" style="font-weight: 500;">Mật khẩu</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="passwordCheck" style="font-weight: 500;">Nhập lại mật khẩu</label>
                        <input type="password" class="form-control" id="passwordCheck" name="passwordCheck" placeholder="Nhập lại mật khẩu">
                    </div>
                    <a class="secure-link-register" href="/login">
                        Đăng nhập
                    </a>
                    <button type="submit" class="btn btn-primary" style="width: 100%; padding: 15px;">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</div>