<div class="container mt-4">
    <div class="post-comic">
        {{#if message}}
        <div class="alert alert-{{message}}">
            <button type="button" name="close" data-dismiss="alert">&times;</button>
            <strong>{{message}}</strong>
        </div>
        {{/if}}
        <div class="post-comic-label">
            Đăng truyện mới
        </div>
        <form onclick="return builderUrlForFrom(this)" method="POST" action="">
            <div class="form-group">
                <label for="name">Tên truện</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="form-group">
                <label for="urlImage">Link ảnh mô tả</label>
                <input type="text" class="form-control" id="urlImage" name="urlImage">
            </div>
            <div class="form-group">
                <label for="author">Tác giả</label>
                <input type="text" class="form-control" id="author" name="author">
            </div>
            <div class="form-group">
                <label for="content">Nội dung</label>
                <textarea  type="text" class="form-control" id="content" name="content"></textarea>
            </div>
            <div>
                <label style="display: block;">Quốc gia</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="country" id="inlineRadio1" value="manga">
                    <label class="form-check-label" for="inlineRadio1">Nhật Bản</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="country" id="inlineRadio2" value="manhua">
                    <label class="form-check-label" for="inlineRadio2">Trung Quốc</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="country" id="inlineRadio3" value="manhwa">
                    <label class="form-check-label" for="inlineRadio3">Hàn Quốc</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Create</button>
        </form>

        <table class="table" style="color: white;">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each comics}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>
                        <a href="/admin/{{this._id}}/edit" class="btn btn-link">Sửa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-comic-model">Xóa</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#update-comic-model">Cập nhật</a>
                    </td>
                </tr>
                {{/each}}
                
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div id="delete-comic-model" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa truyện</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa truyện này không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-comic" class="btn btn-danger">Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>

<div id="update-comic-model" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Cập nhật truyện</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn cập nhật truyện này không?</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-update-comic" class="btn btn-danger">Yes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-comic-form" method="POST" action=""></form>
<form name="update-comic-form" method="POST" action=""></form>


<script>
    function builderUrlForFrom(item) {
        item.action = `${window.location.origin}/admin/create`
        return true
    }

    document.addEventListener('DOMContentLoaded', function() {
        var comicId
        var deleteForm = document.forms['delete-comic-form']
        var btnDeleteComic = document.getElementById('btn-delete-comic')

        $('#delete-comic-model').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) 
            comicId = button.data('id') 
        })

        btnDeleteComic.onclick = () => {
            deleteForm.action = `/admin/${comicId}?_method=DELETE`
            deleteForm.submit()
        }
    })

    document.addEventListener('DOMContentLoaded', function() {
        var comicId
        var deleteForm = document.forms['update-comic-form']
        var btnDeleteComic = document.getElementById('btn-update-comic')

        $('#update-comic-model').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget) 
            comicId = button.data('id') 
        })

        btnDeleteComic.onclick = () => {
            deleteForm.action = `/admin/${comicId}?_method=PUT`
            deleteForm.submit()
        }
    })
</script>