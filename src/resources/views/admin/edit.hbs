<div class="container mt-4">
    <div class="post-comic">
        <div class="post-comic-label">
            Sửa truyện
        </div>
        <form onclick="return buildUrlForFormEdit(this, `{{comic._id}}`)" method="POST" action="">
            <div class="form-group">
                <label for="name">Tên truện</label>
                <input type="text" class="form-control" id="name" name="name" value="{{comic.name}}">
            </div>
            <div class="form-group">
                <label for="chapterNumber">Chapter</label>
                <input type="text" class="form-control" id="chapterNumber" name="detailChapters">
            </div>
            <div class="form-group">
                <label for="images">Link ảnh</label>
                <textarea type="text" class="form-control" id="images" name="detailChapters"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Sửa</button>
        </form>
    </div>
</div>

<script>
    function buildUrlForFormEdit(item, id) {
        item.action = `${window.location.origin}/admin/${id}?_method=PUT`
        return true
    }
</script>