<div class="container mt-4">
    <ul class="breadcrumb">
        <li id="breadcrumb-item-home" class="breadcrumb-item">
            <a href="/">Home</a>
            <div class="triangle"></div>
        </li>
        <li id="breadcrumb-item-list" class="breadcrumb-item d-none d-sm-block d-lg-block">
            <a href="/list-comic">Danh sách truyện</a>
            <div class="triangle"></div>
        </li>
        <li id="breadcrumb-item-genre" class="breadcrumb-item breadcrumb-item-active">
            <a id="breadcrumb-name-genre" href="#"></a>
            <div class="triangle"></div>
        </li>
    </ul>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 col-lg-12 col-xl-8">
            <div class="container-comic">
                <div class="container-comic-label">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                    Danh sách truyện
                </div>
                <div class="list-comic">
                    <div class="row">
                        {{#each comics}}
                            <div class="col-6 col-lg-4 col-xl-3 ">
                                <div class="comic-item">
                                    <a onclick="return buildURL(this, `{{this.slug}}`)" href="" class="comic-item-image-link">
                                        <img src="{{this.urlImage}}" alt="" class="comic-item-image">
                                    </a>
                                    <a onclick="return buildURL(this, `{{this.slug}}`)" href="" class="comic-item-name">
                                        {{this.name}}
                                    </a>
                                    <a href="" class="comic-item-chapter">
                                        Chapter {{this.detailChapter.length}}
                                    </a>
                                    <div class="comic-item-chapterDetail-father">
                                        {{#each this.detailChapter}}
                                            <a href="/comic/{{this.slugComic}}/{{this.slugChapter}}" class="comic-item-chapterDetail">
                                                {{this.name}}
                                            </a>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-12 col-xl-4">
            <div class="facebook-plugin">
                <div class="facebook-plugin-label">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                    </svg>
                    <div>Facebook</div>
                </div>
                <iframe style="background-color: white;" src="https://www.facebook.com/plugins/post.php?href=https%3A%2F%2Fwww.facebook.com%2F1647848441994270%2Fphotos%2Fa.1648236181955496%2F3447724662006630&width=340&show_text=true&height=796&appId" width="340" height="796" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowfullscreen="true" allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"></iframe>
            </div>
        </div>
    </div>
</div>

<script>
    function buildURLOrigin(item) {
        item.href = window.location.origin
        return true
    }

    function buildUrlListComic(item) {
        item.href = `${window.location.origin}/list-comic`
        return true
    }

    function buildURL(item, slug)
    {   
        item.href=`${window.location.origin}/comic/${slug}`
        return true
    }

    function getNameGenreFromUrl() {
        var curUrl = window.location.href
        let getSlugFromCurUrl = Url => new URL(Url).pathname.match(/[^\/]+/g)

        nameGenre = getSlugFromCurUrl(curUrl)[1]

        if(typeof nameGenre == 'undefined')
        {
            document.getElementById('breadcrumb-item-genre').remove()
            document.getElementById('breadcrumb-item-list').classList.add('breadcrumb-item-active')
        }
        document.getElementById('breadcrumb-name-genre').innerHTML = nameGenre
    }

    getNameGenreFromUrl()

</script>